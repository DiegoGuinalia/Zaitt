<div class="container">
  <div class="section">
 
    <div class="row">
      <div class="col s12 m12">
        <div class="icon-block">
          <table>
            <thead>
              <% if @issues.any? %>
                <tr>
                  <th></th>
                  <th>id</th>
                  <th>action</th>
                  <th>repository id</th>
                  <th>repository name</th>
                  <th>owner name</th>
                  <th>created at</th>
                  <th>updated at</th>
                </tr>
              <% else %>
                <div class="col s12 m12">
                  <div class="icon-block">
                    <h2 class="center light-blue-text"><i class="material-icons">error</i></h2>
                    <h5 class="center">Ainda não existem repositórios cadastrados</h5>
                    <p class="light"></p>
                  </div>
                </div>
              <% end %>
            </thead>
    
            <tbody>
              <% @issues.each do |issue| %>
                <tr>
                  <td><%= link_to "Visualizar", issue_path(issue), class:"btn-small waves-effect waves-light light-blue" %></td>
                  <td><%= issue.id%></td>
                  <td><%= issue.action %></td>
                  <td><%= issue.repository_id%></td>
                  <td><%= issue.repository_name%></td>
                  <td><%= issue.owner_name%></td>
                  <td><%= issue.created_at%></td>
                  <td><%= issue.updated_at%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
  </div>
</div>
 